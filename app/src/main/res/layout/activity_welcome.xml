<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.root.diabetesapp.WelcomeActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="70dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/welcome_username"
            android:textSize="20dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/current_date_welcome"
            android:textSize="20dp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>


        <RadioGroup
            android:id="@+id/type_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <RadioButton
                android:text="Antes de comer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pre"
                android:padding="15dp"/>

            <RadioButton
                android:text="DespuÃ©s de comer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post"
                android:padding="15dp"/>
        </RadioGroup>

        <EditText
            android:id="@+id/glucose_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:padding="25dp"
            android:inputType="number"
            android:hint="Glucosa mg/dl"
            android:textColorHint="#bbbbbb"/>

        <EditText
            android:id="@+id/description_welcome"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-2dp"
            android:padding="10dp"
            android:hint="Comentario"
            android:textColorHint="#bbbbbb"/>

        <Button
            android:id="@+id/saveGlucose_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Agregar +"
            android:onClick="saveGlucose"
            android:background="@drawable/button1"
            android:textColor="#FFF"
            />

    </LinearLayout>

</FrameLayout>
